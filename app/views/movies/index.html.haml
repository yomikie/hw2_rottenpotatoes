-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class=>("hilite" if @sort=="title")} <a href="/movies/?sort=title" id="title_header">Movie Title</a> 
      %th Rating
      %th{:class=>("hilite" if @sort=="release_date")} <a href="/movies/?sort=release_date" id="release_date_header">Release Date</a>
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
